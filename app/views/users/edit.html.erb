<h1 class="page-title-conf">プロフィール</h1>
<div class="user-prf-edit">
  <%= form_with model: @user do |f| %>
    <div>
      <label>アイコン画像</label>
      <% if @user.icon_image? %>
        <%= image_tag @user.icon_image.url, :size => '70x70', class:"user_icon" %>
      <% else %>
        <%= image_tag "default.png" , :size => '70x70' %>
      <% end %>
      <%= f.file_field :icon_image %>
    </div>
    <div>
      <label>名前</label>
      <%= f.text_field :name %>
    </div>
    <div>
      <label>自己紹介</label>
      <%= f.text_area :introduction %>
    </div>
    <div><%= f.submit "保存" %></div>
    <div><%= link_to "キャンセル", :back, class:"cancel-btn" %></div>
    
  <% end %>
</div>
